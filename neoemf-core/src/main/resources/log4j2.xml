<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" shutdownHook="disable">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%-7level{WARN=[WARN], DEBUG=[DEBUG], ERROR=[ERROR], TRACE=[TRACE], INFO=[INFO]} %d{ABSOLUTE} - %msg%n%ex{full}" />
        </Console>
        <Console name="ConsoleTest" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console" />
        </Root>

        <!-- Special logger for tests -->

        <Logger name="test" level="ALL" additivity="false">
            <AppenderRef ref="ConsoleTest" />
        </Logger>

        <!-- Apache & co -->

        <Logger name="org.apache" level="OFF" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="org.mortbay" level="OFF" additivity="false">
            <AppenderRef ref="ConsoleTest" />
        </Logger>
        <Logger name="SecurityLogger" level="OFF" additivity="false">
            <AppenderRef ref="ConsoleTest" />
        </Logger>
        <Logger name="BlockStateChange" level="OFF" additivity="false">
            <AppenderRef ref="ConsoleTest" />
        </Logger>
    </Loggers>
</Configuration>