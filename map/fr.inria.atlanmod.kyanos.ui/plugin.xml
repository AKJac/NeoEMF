<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="fr.inria.atlanmod.kyanos.ui.editors.KyanosEditor"
            contributorClass="org.eclipse.emf.ecore.presentation.EcoreActionBarContributor"
            default="false"
            icon="platform:/plugin/org.eclipse.emf.edit/icons/full/obj16/ModelFile.gif"
            id="fr.inria.atlanmod.kyanos.ui.editors.KyanosEditor"
            name="Kyanos Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.emf.importer.modelImporterDescriptors">
      <modelImporterDescriptor
            description="Create the Ecore model based on other Ecore or EMOF models"
            extensions="ecore,emof"
            icon="icons/full/obj16/KyanosModelFile.gif"
            id="fr.inria.atlanmod.kyanos.ui.modelImporterDescriptor"
            name="Ecore model (Kyanos Native)"
            wizard="fr.inria.atlanmod.kyanos.ui.wizards.KyanosModelImporterWizard">
      </modelImporterDescriptor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="&amp;Kyanos">
            <command
                  commandId="fr.inria.atlanmod.kyanos.ui.migrate"
                  style="push">
               <visibleWhen>
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <adapt
                              type="org.eclipse.core.resources.IFile">
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="genmodel">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="fr.inria.atlanmod.kyanos.ui.openDB"
                  style="push">
               <visibleWhen>
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <adapt
                              type="org.eclipse.core.resources.IFolder">
                           <test
                                 property="fr.inria.atlanmod.kyanos.ui.isKyanosDB"
                                 value="true">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="fr.inria.atlanmod.kyanos.ui.createDynamicInstance"
               style="push">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.emf.ecore.EClass">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="fr.inria.atlanmod.kyanos.ui.commands.MigrateCommand"
            id="fr.inria.atlanmod.kyanos.ui.migrate"
            name="&amp;Migrate EMF Generator Model">
      </command>
      <command
            defaultHandler="fr.inria.atlanmod.kyanos.ui.commands.OpenKyanosDbCommand"
            id="fr.inria.atlanmod.kyanos.ui.openDB"
            name="&amp;Open Model Database">
      </command>
      <command
            defaultHandler="fr.inria.atlanmod.kyanos.ui.commands.CreateDynamicInstanceCommand"
            id="fr.inria.atlanmod.kyanos.ui.createDynamicInstance"
            name="Create &amp;Kyanos Dynamic Instance...">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="fr.inria.atlanmod.kyanos.ui.tester.KyanosDatabase"
            id="fr.inria.atlanmod.kyanos.ui.isKyanosDB"
            namespace="fr.inria.atlanmod.kyanos.ui"
            properties="isKyanosDB"
            type="org.eclipse.core.resources.IFolder">
      </propertyTester>
   </extension>
</plugin>
