        <artifactId>graph</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>graph.blueprints.neo4j</artifactId>
    <packaging>bundle</packaging>

    <name>NeoEMF :: Graph :: Blueprints :: Neo4j Wrapper</name>

    <dependencies>
